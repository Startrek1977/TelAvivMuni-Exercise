<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--  ============================================  -->
  <!--  Shared Resources (theme-independent)  -->
  <!--  ============================================  -->

  <!--  Brush defaults for DataBrowserBox control (consumed by Generic.xaml via MergedDictionaries).
        Active themes override these keys in Application.Current.Resources for all Window-hosted
        elements; Generic.xaml (a ResourceDictionary) cannot reach app resources with StaticResource,
        so it relies on these local copies instead.  -->
  <SolidColorBrush x:Key="WhiteBrush"         Color="White" />
  <SolidColorBrush x:Key="BorderLightBrush"   Color="#CCCCCC" />
  <SolidColorBrush x:Key="BorderBrush"        Color="#E0E0E0" />
  <SolidColorBrush x:Key="PrimaryDarkBrush"   Color="#1976D2" />
  <SolidColorBrush x:Key="TextPrimaryBrush"   Color="#424242" />
  <SolidColorBrush x:Key="TextDisabledBrush"  Color="#9E9E9E" />
  <SolidColorBrush x:Key="NeutralLightBrush"  Color="#F5F5F5" />
  <SolidColorBrush x:Key="NeutralMediumBrush" Color="#EEEEEE" />
  <SolidColorBrush x:Key="NeutralDarkBrush"   Color="#E0E0E0" />
  <SolidColorBrush x:Key="NeutralHoverBrush"  Color="#F0F0F0" />

  <!--  Browse Dialog Icon (same as browse button content)  -->
  <DrawingImage x:Key="BrowseDialogIcon">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="Transparent">
          <GeometryDrawing.Pen>
            <Pen Brush="White" Thickness="1.5" />
          </GeometryDrawing.Pen>
          <GeometryDrawing.Geometry>
            <PathGeometry Figures="M 2,1 H 14 A 1,1 0 0 1 15,2 V 5 A 1,1 0 0 1 14,6 H 2 A 1,1 0 0 1 1,5 V 2 A 1,1 0 0 1 2,1 Z M 2,10 H 14 A 1,1 0 0 1 15,11 V 14 A 1,1 0 0 1 14,15 H 2 A 1,1 0 0 1 1,14 V 11 A 1,1 0 0 1 2,10 Z" />
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
        <GeometryDrawing Brush="White">
          <GeometryDrawing.Geometry>
            <GeometryGroup>
              <EllipseGeometry Center="4,3.5"
                               RadiusX="1"
                               RadiusY="1" />
              <EllipseGeometry Center="4,12.5"
                               RadiusX="1"
                               RadiusY="1" />
            </GeometryGroup>
          </GeometryDrawing.Geometry>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

</ResourceDictionary>
